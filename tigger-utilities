#!/bin/dash

  #################
 #    Defines    #
#################


PWD=$(pwd)
REPO="$PWD/.tigger"
INDEX_DIR="$REPO/index"
PRGRM=$(basename $0)




  #################
 #   Functions   #
#################


#emulate perls die function
die()
{
	err_msg="$1"
	echo "$err_msg" 1>&2
	exit 1
}


check_repo_exists()
{
  [ -d  "$REPO" ] || die "$PRGRM: error: tigger repository directory .tigger not found"
  return 0  
}
